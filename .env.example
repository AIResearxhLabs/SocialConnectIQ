# Environment Configuration Template
# Copy this file to .env and fill in your actual values

# =============================================================================
# ENVIRONMENT
# =============================================================================
ENVIRONMENT=development
LOG_LEVEL=INFO

# =============================================================================
# MCP SERVER CONFIGURATION
# =============================================================================
# MCP Host Type: Determines which MCP server to connect to
# Options:
#   'local'  - Use local Docker Desktop MCP container (http://localhost:3001)
#   'cloud'  - Use cloud-hosted MCP server (AWS/GCP)
#   'custom' - Use custom URL specified in MCP_SERVER_URL
MCP_HOST_TYPE=local

# Cloud MCP Server URL (used when MCP_HOST_TYPE=cloud or custom)
# Replace with your actual cloud MCP server URL
MCP_SERVER_URL=http://3.141.18.225:3001

# Local MCP Server URL (used when MCP_HOST_TYPE=local)
# This should point to your local Docker Desktop MCP container
MCP_LOCAL_URL=http://localhost:3001

# Agent Service URL (for callbacks from MCP server)
AGENT_SERVICE_URL=http://localhost:8006

# MCP Connection Settings
MCP_SERVER_TIMEOUT=30
MCP_SERVER_RETRY_ATTEMPTS=3
MCP_SERVER_RETRY_DELAY=2

# =============================================================================
# OPENAI CONFIGURATION
# =============================================================================
# Your OpenAI GPT-4o API credentials
OPENAI_API_KEY=sk-proj-your-key-here
OPENAI_MODEL=gpt-4o
OPENAI_ORG_ID=org-your-org-id
OPENAI_TEMPERATURE=0.7
OPENAI_MAX_TOKENS=2000

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
# PostgreSQL connection string
DATABASE_URL=postgresql://user:password@localhost:5432/socialdb
DB_POOL_SIZE=20
DB_MAX_OVERFLOW=10

# Redis connection string (for caching and agent memory)
REDIS_URL=redis://localhost:6379
REDIS_TTL=3600
REDIS_MAX_CONNECTIONS=50

# =============================================================================
# FIREBASE AUTHENTICATION
# =============================================================================
FIREBASE_PROJECT_ID=your-project-id
FIREBASE_PRIVATE_KEY=your-private-key-here
FIREBASE_CLIENT_EMAIL=your-client-email@project.iam.gserviceaccount.com
FIREBASE_DATABASE_URL=https://your-project.firebaseio.com

# =============================================================================
# SECURITY & JWT
# =============================================================================
JWT_SECRET=your-secret-key-minimum-32-characters-long
JWT_ALGORITHM=HS256
JWT_EXPIRATION_MINUTES=60

# CORS Configuration (comma-separated origins)
CORS_ORIGINS=http://localhost:3000,http://localhost:8000

# Rate limiting
RATE_LIMIT_PER_USER=100
RATE_LIMIT_WINDOW_MINUTES=60

# =============================================================================
# AI AGENT CONFIGURATION
# =============================================================================
AGENT_MAX_ITERATIONS=10
AGENT_MEMORY_WINDOW=10
AGENT_CONVERSATION_TIMEOUT=3600
AGENT_ENABLE_STREAMING=true

# =============================================================================
# SERVICE PORTS (for local development)
# =============================================================================
API_GATEWAY_PORT=8000
AUTH_SERVICE_PORT=8001
INTEGRATION_SERVICE_PORT=8002
SCHEDULING_SERVICE_PORT=8003
AGENT_SERVICE_PORT=8004
ANALYTICS_SERVICE_PORT=8005
POSTING_SERVICE_PORT=8006

# =============================================================================
# MONITORING & LOGGING
# =============================================================================
ENABLE_AUDIT_LOGGING=true
ENABLE_COST_TRACKING=true
LOG_FORMAT=json
LOG_OUTPUT=stdout

# Sentry DSN (optional, for error tracking)
SENTRY_DSN=

# =============================================================================
# DEVELOPMENT FLAGS
# =============================================================================
DEBUG_MODE=false
MOCK_MCP_SERVER=false
ENABLE_PROFILING=false
